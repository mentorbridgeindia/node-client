{
    "openapi": "3.0.0",
    "info": {
      "title": "Emails API - Welcome Email",
      "version": "1.0.0",
      "description": "API for sending welcome emails"
    },
    "servers": [
      {
        "url": "http://localhost:4444"
      }
    ],
    "paths": {
      "/send-email": {
        "post": {
          "summary": "Send Welcome Email",
          "tags": ["SendEmail"],
          "description": "Sends a welcome email to newly registered users.",
          "requestBody": {
            "required": true,
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "to": {
                      "type": "string",
                      "example": "user@example.com"
                    },
                    "from": {
                      "type": "string",
                      "example": "support@yourcompany.com"
                    },
                    "subject": {
                      "type": "string",
                      "example": "Welcome to SecuroSphere!"
                    },
                    "type": {
                      "type": "string",
                      "example": "welcome"
                    },
                    "userName": {
                      "type": "string",
                      "example": "John Doe"
                    },
                    "loginUrl": {
                      "type": "string",
                      "example": "https://example.com/login"
                    },
                    "organization": {
                      "type": "string",
                      "example": "SecuroSphere"
                    },
                    "rawUrl": {
                      "type": "string",
                      "example": "support@securo.com"
                    }
                  },
                  "required": ["to", "from", "subject", "userName", "loginUrl", "organization"]
                }
              }
            }
          },
          "responses": {
            "200": {
              "description": "Email sent successfully",
              "content": {
                "application/json": {
                  "example": {
                    "message": "Welcome email sent successfully"
                  }
                }
              }
            },
            "400": {
              "description": "Bad request - Missing parameters",
              "content": {
                "application/json": {
                  "example": {
                    "error": "Missing required parameters"
                  }
                }
              }
            },
            "500": {
              "description": "Internal server error",
              "content": {
                "application/json": {
                  "example": {
                    "error": "An unexpected error occurred"
                  }
                }
              }
            }
          }
        }
      }
    }
  }
  