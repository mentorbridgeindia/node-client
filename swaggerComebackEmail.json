{
    "openapi": "3.0.0",
    "info": {
      "title": "Emails API - We Miss You Email",
      "version": "1.0.0",
      "description": "API for sending a re-engagement email to users who haven't logged in for a while."
    },
    "servers": [
      {
        "url": "http://localhost:4444"
      }
    ],
    "paths": {
      "/send-email": {
        "post": {
          "summary": "Send We Miss You Email",
          "tags": ["SendEmail"],
          "description": "Sends an email to re-engage users who have been inactive for a while.",
          "requestBody": {
            "required": true,
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "to": {
                      "type": "string",
                      "example": "user@example.com"
                    },
                    "from": {
                      "type": "string",
                      "example": "noreply@yourcompany.com"
                    },
                    "subject": {
                      "type": "string",
                      "example": "We Miss You! Come Back and Check What's New"
                    },
                    "type": {
                      "type": "string",
                      "example": "comeback_email"
                    },
                    "userName": {
                      "type": "string",
                      "example": "John Doe"
                    },
                    "userLink": {
                      "type": "string",
                      "example": "https://example.com/login"
                    },
                    "organization": {
                      "type": "string",
                      "example": "MentorBridge"
                    }
                  },
                  "required": [
                    "to",
                    "from",
                    "subject",
                    "userName",
                    "userLink",
                    "organization"
                  ]
                }
              }
            }
          },
          "responses": {
            "200": {
              "description": "Email sent successfully",
              "content": {
                "application/json": {
                  "example": {
                    "message": "We Miss You email sent successfully"
                  }
                }
              }
            },
            "400": {
              "description": "Bad request - Missing parameters",
              "content": {
                "application/json": {
                  "example": {
                    "error": "Missing required parameters"
                  }
                }
              }
            },
            "500": {
              "description": "Internal server error",
              "content": {
                "application/json": {
                  "example": {
                    "error": "An unexpected error occurred"
                  }
                }
              }
            }
          }
        }
      }
    }
  }
  