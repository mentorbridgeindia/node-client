{
    "openapi": "3.0.0",
    "info": {
      "title": "Emails API - Password Changed Email",
      "version": "1.0.0",
      "description": "API for sending password changed notification emails"
    },
    "servers": [
      {
        "url": "http://localhost:4444"
      }
    ],
    "paths": {
      "/send-email": {
        "post": {
          "summary": "Send Password Changed Email",
          "tags": ["SendEmail"],
          "description": "Sends an email notifying the user that their password has been successfully changed.",
          "requestBody": {
            "required": true,
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "to": {
                      "type": "string",
                      "example": "user@example.com"
                    },
                    "from": {
                      "type": "string",
                      "example": "support@yourcompany.com"
                    },
                    "subject": {
                      "type": "string",
                      "example": "Your Password Has Been Changed Successfully"
                    },
                    "type": {
                      "type": "string",
                      "example": "password_changed"
                    },
                    "website": {
                      "type": "string",
                      "example": "https://example.com"
                    },
                    "organization": {
                      "type": "string",
                      "example": "SecuroSphere"
                    }
                  },
                  "required": ["to", "from", "subject", "website", "organization"]
                }
              }
            }
          },
          "responses": {
            "200": {
              "description": "Email sent successfully",
              "content": {
                "application/json": {
                  "example": {
                    "message": "Password changed email sent successfully"
                  }
                }
              }
            },
            "400": {
              "description": "Bad request - Missing parameters",
              "content": {
                "application/json": {
                  "example": {
                    "error": "Missing required parameters"
                  }
                }
              }
            },
            "500": {
              "description": "Internal server error",
              "content": {
                "application/json": {
                  "example": {
                    "error": "An unexpected error occurred"
                  }
                }
              }
            }
          }
        }
      }
    }
  }
  