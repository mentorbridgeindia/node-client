{
  "openapi": "3.0.0",
  "info": {
    "title": "Emails API - Verification",
    "version": "1.0.0",
    "description": "API for sending verification emails"
  },
  "servers": [
    {
      "url": "http://localhost:4444"
    }
  ],
  "paths": {
    "/send-email": {
      "post": {
        "summary": "Send Verification Email",
        "tags": ["SendEmail"],
        "description": "Sends a verification email for user registration.",
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "to": {
                    "type": "string",
                    "example": "nivethitha029@gmail.com"
                  },
                  "from": {
                    "type": "string",
                    "example": "Utsavppt@gmail.com"
                  },
                  "subject": {
                    "type": "string",
                    "example": "register email"
                  },
                  "type": {
                    "type": "string",
                    "example": "register_user"
                  },
                  "verificationCode": {
                    "type": "string",
                    "example": "12345"
                  },
                  "organization": {
                    "type": "string",
                    "example": "stublab"
                  },
                  "website": {
                    "type": "string",
                    "example": "https://mentorbridge.com"
                  },
                  "policyUrl": {
                    "type": "string",
                    "example": "https://mentorbridge.com/privacy-policy"
                  }
                },
                "required": ["verificationCode", "organization", "website", "policyUrl"]
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Email sent successfully",
            "content": {
              "application/json": {
                "example": {
                  "message": "Verification email sent successfully"
                }
              }
            }
          },
          "400": {
            "description": "Bad request - Missing parameters",
            "content": {
              "application/json": {
                "example": {
                  "error": "Missing required parameters"
                }
              }
            }
          }
        }
      }
    }
  }
}
