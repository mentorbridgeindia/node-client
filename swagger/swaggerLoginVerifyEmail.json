{
    "openapi": "3.0.0",
    "info": {
      "title": "Emails API - Login Verify Email",
      "version": "1.0.0",
      "description": "API for sending login verification emails."
    },
    "servers": [
      {
        "url": "http://localhost:4444"
      }
    ],
    "paths": {
      "/send-email": {
        "post": {
          "summary": "Send Login Verification Email",
          "tags": ["SendEmail"],
          "description": "Sends a login verification email to the user after logging in.",
          "requestBody": {
            "required": true,
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "to": {
                      "type": "string",
                      "example": "user@example.com"
                    },
                    "from": {
                      "type": "string",
                      "example": "noreply@yourcompany.com"
                    },
                    "subject": {
                      "type": "string",
                      "example": "Verify Your Login Activity"
                    },
                    "type": {
                      "type": "string",
                      "example": "login_verification"
                    },
                    "userFirstName": {
                      "type": "string",
                      "example": "John"
                    },
                    "website": {
                      "type": "string",
                      "example": "https://example.com/get-started"
                    },
                    "organization": {
                      "type": "string",
                      "example": "SecuroSphere"
                    }
                  },
                  "required": [
                    "to",
                    "from",
                    "subject",
                    "userFirstName",
                    "website",
                    "organization"
                  ]
                }
              }
            }
          },
          "responses": {
            "200": {
              "description": "Email sent successfully",
              "content": {
                "application/json": {
                  "example": {
                    "message": "Login verification email sent successfully"
                  }
                }
              }
            },
            "400": {
              "description": "Bad request - Missing parameters",
              "content": {
                "application/json": {
                  "example": {
                    "error": "Missing required parameters"
                  }
                }
              }
            },
            "500": {
              "description": "Internal server error",
              "content": {
                "application/json": {
                  "example": {
                    "error": "An unexpected error occurred"
                  }
                }
              }
            }
          }
        }
      }
    }
  }
  