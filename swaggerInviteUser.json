{
    "openapi": "3.0.0",
    "info": {
      "title": "Emails API - Invite User Email",
      "version": "1.0.0",
      "description": "API for sending user invitation emails"
    },
    "servers": [
      {
        "url": "http://localhost:4444"
      }
    ],
    "paths": {
      "/send-email": {
        "post": {
          "summary": "Send Invite User Email",
          "tags": ["SendEmail"],
          "description": "Sends an invitation email to a user to join an application within an organization.",
          "requestBody": {
            "required": true,
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "to": {
                      "type": "string",
                      "example": "user@example.com"
                    },
                    "from": {
                      "type": "string",
                      "example": "noreply@yourcompany.com"
                    },
                    "subject": {
                      "type": "string",
                      "example": "You're Invited to Join Our Team!"
                    },
                    "type": {
                      "type": "string",
                      "example": "invite_user"
                    },
                    "applicationName": {
                      "type": "string",
                      "example": "Project Management App"
                    },
                    "organizationName": {
                      "type": "string",
                      "example": "TechCorp Inc."
                    },
                    "emails": {
                      "type": "string",
                      "example": "newuser@example.com"
                    },
                    "website": {
                      "type": "string",
                      "example": "https://example.com/join"
                    },
                    "rawUrl": {
                      "type": "string",
                      "example": "https://example.com/invite-link"
                    }
                  },
                  "required": [
                    "to",
                    "from",
                    "subject",
                    "applicationName",
                    "organizationName",
                    "emails",
                    "website",
                    "rawUrl"
                  ]
                }
              }
            }
          },
          "responses": {
            "200": {
              "description": "Email sent successfully",
              "content": {
                "application/json": {
                  "example": {
                    "message": "Invite user email sent successfully"
                  }
                }
              }
            },
            "400": {
              "description": "Bad request - Missing parameters",
              "content": {
                "application/json": {
                  "example": {
                    "error": "Missing required parameters"
                  }
                }
              }
            },
            "500": {
              "description": "Internal server error",
              "content": {
                "application/json": {
                  "example": {
                    "error": "An unexpected error occurred"
                  }
                }
              }
            }
          }
        }
      }
    }
  }
  